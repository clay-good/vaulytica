# Vaulytica Configuration
# Copy this file to .env and fill in your values

# Google Workspace Configuration
# Path to your service account JSON key file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Email of the admin user to impersonate (required for domain-wide delegation)
# GOOGLE_ADMIN_EMAIL=admin@yourdomain.com

# Your Google Workspace domain
# GOOGLE_DOMAIN=yourdomain.com

# Optional: Multiple domains (comma-separated)
# GOOGLE_DOMAINS=domain1.com,domain2.com,domain3.com

# Optional: Notification Settings
# Slack Integration
# VAULYTICA_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# VAULYTICA_SLACK_CHANNEL=#security-alerts

# Microsoft Teams Integration
# VAULYTICA_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Email Integration (SMTP)
# VAULYTICA_SMTP_HOST=smtp.gmail.com
# VAULYTICA_SMTP_PORT=587
# VAULYTICA_SMTP_USERNAME=your-email@example.com
# VAULYTICA_SMTP_PASSWORD=your-app-password
# VAULYTICA_SMTP_FROM=vaulytica@example.com
# VAULYTICA_SMTP_TO=security-team@example.com,soc@example.com

# Optional: Webhook Configuration
# Set this to enable webhook signature verification for Datadog and other platforms
# VAULYTICA_WEBHOOK_SECRET=your-webhook-secret-here

# Optional: Performance Tuning
# Maximum number of concurrent workers for batch operations
# VAULYTICA_BATCH_MAX_WORKERS=3

# Maximum number of historical incidents to track
# VAULYTICA_MAX_HISTORICAL_INCIDENTS=5

# Optional: Storage Paths
# Directory for scan outputs and reports
# VAULYTICA_OUTPUT_DIR=./outputs

# Optional: Notification Thresholds
# Minimum risk score to trigger notifications (0-100)
# VAULYTICA_MIN_RISK_SCORE_NOTIFY=50

# Notify on cache hits (useful for debugging)
# VAULYTICA_NOTIFY_ON_CACHE_HIT=false

# Optional: Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# VAULYTICA_LOG_LEVEL=INFO

# Optional: Enable caching
# VAULYTICA_ENABLE_CACHE=true

# Optional: Cache TTL in seconds
# VAULYTICA_CACHE_TTL=3600

# Optional: Secrets Management Integration
# HashiCorp Vault
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your-vault-token
# VAULT_PATH=secret/data/vaulytica

# AWS Secrets Manager
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=vaulytica/credentials

# Optional: Prometheus Metrics
# VAULYTICA_METRICS_PORT=9090
# VAULYTICA_METRICS_ENABLED=true
